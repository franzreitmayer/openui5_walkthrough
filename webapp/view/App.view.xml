<mvc:View
   xmlns="sap.m"
   controllerName="eu.reitmayer.openui5.walkthrough.controller.App"
   xmlns:mvc="sap.ui.core.mvc"
   displayBlock="true">
    <Shell>
        <App class="myAppDemoWT">
            <pages>
                <Page title="{i18n>homePageTitle}">
                <headerContent>
						<Button
							icon="sap-icon://hello-world"
							press=".onOpenDialog"/>
					</headerContent>
                    <content>
                        <mvc:XMLView viewName="eu.reitmayer.openui5.walkthrough.view.HelloPanel"/>
                        <mvc:XMLView viewName="eu.reitmayer.openui5.walkthrough.view.InvoiceList"/>
                    </content>
                </Page>
            </pages>
        </App>
    </Shell>
</mvc:View>